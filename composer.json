    "description": "Gitter async api",
    "keywords": [
        "gitter",
        "api",
        "async",
        "react",
        "client"
    ],
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Nesmeyanov Kirill",
            "email": "nesk@xakep.ru"
        }
    ],
    "require": {
        "php": ">=7.0",
        "ext-sockets": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "guzzlehttp/guzzle": "^6.2",
        "react/event-loop": "^0.4",
        "clue/buzz-react": "^1.0",
        "monolog/monolog": "^1.21"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.5"
    },
    "autoload": {
        "psr-4": {
